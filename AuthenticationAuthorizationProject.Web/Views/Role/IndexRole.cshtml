@model IEnumerable<AuthenticationAuthorizationProject.Web.ViewModels.ListOfRole>
<br />
<div class="container p-4 border">
	<div class="row pb-2">
		<div class="col">
			<h1 class="text-primary">Role List</h1>
		</div>
		<div class="col text-end pt-1">
			<a asp-controller="Role" asp-action="AddRole" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i> Add New Role</a>
		</div>
	</div>

	<table class="table">
		<thead>
			<tr>
				<th>
					Id
				</th>
				<th>
					Name
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>@item.Id</td>
					<td>@item.Name</td>
					
					<td>
						<a asp-controller="Role" asp-action="UpdateRole" asp-route-roleId="@item.Id" class="btn btn-success"><i class="bi bi-pencil-square"></i>Edit</a>
						<a asp-controller="Role" asp-action="DeleteRole" asp-route-roleId="@item.Id" class="btn btn-danger"><i class="bi bi-trash-fill"></i>Delete</a>
					</td>
				</tr>
			}
		</tbody>
	</table>

</div>

